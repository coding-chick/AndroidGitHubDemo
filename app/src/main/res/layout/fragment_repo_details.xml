<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.codingchick.androidgithubdemo.views.fragments.RepoDetailsFragment"
    android:background="@android:color/white">

    <RelativeLayout android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/avatar_full_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"/>

        <LinearLayout android:id="@+id/main_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avatar_full_image"
            android:background="@color/white_overlay"
            android:orientation="vertical">

            <TextView android:id="@+id/repo_full_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textColor="@color/accent"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView android:id="@+id/star_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/star_on"
                    android:layout_alignBottom="@+id/repo_full_name_text" />
                <TextView android:id="@+id/star_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/repo_full_name_text"
                    android:layout_alignRight="@+id/star_icon"
                    android:textSize="16sp"
                    android:textColor="@color/accent"/>
                </LinearLayout>

            <TextView android:id="@+id/owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/accent"
                android:layout_alignBottom="@+id/star_icon"/>
        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>
