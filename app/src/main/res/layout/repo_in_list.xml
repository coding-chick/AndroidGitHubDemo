<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginBottom="10dp">

    <ImageView android:id="@+id/user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"/>

    <TextView android:id="@+id/repo_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/accent"
        android:layout_toRightOf="@id/user_image"/>
    <TextView android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/primary_light"
        android:layout_below="@id/repo_name_text"
        android:layout_toRightOf="@id/user_image"/>
    <TextView android:id="@+id/updated_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        android:layout_below="@id/description"
        android:layout_toRightOf="@id/user_image"/>

    <View android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#232323" android:layout_below="@id/updated_on"
        android:layout_marginTop="5dp" />
</RelativeLayout>